<h1><%= @dish.name %></h1>
<%= @dish.description %>
<br>
<% @dish.ingredients.each do |ingredient| %>
  <p><%= ingredient.name %></p>
<% end %>
<p><%= @dish.total_calories %></p>
<p><%= @dish.chef.name %></p>

<%= form_with url: "/dishes/#{@dish.id}", method: :patch, local: true do |f| %>
  <%= f.label :ingredient_id %>
  <%= f.text_field :ingredient_id %>
  <%= f.submit "Add Ingredient" %>
<% end %>