<h1><%= @dish.name %></h1>
<h3>Description: <%= @dish.description %></h3>

<h3>Ingredients:</h3>
<ul>
  <% @dish.ingredients.each do |ingredient| %>
    <li><%= ingredient.name %></li>
  <% end %>
</ul>

<%= form_with model: @dish_ingredient, url: dish_ingredients_path, id: "add-ingredient", local: true do |form| %>
  <%= form.label :ingredient_id, "Enter an Ingredient ID:" %>
  <%= form.number_field :ingredient_id %>
  <%= form.hidden_field :dish_id, value: @dish.id %>
  <%= form.submit "Add Ingredient"%>
<% end %>
<% if flash.any? %>
  <% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
<% end %>

<h3>Total Calories: <%= @dish.total_calories %></h3>
<h3>Dish curated by Chef <%= @dish.chef.name %></h3>